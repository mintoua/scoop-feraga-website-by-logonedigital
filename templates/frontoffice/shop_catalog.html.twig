                <div class="goods-filter__inner">
                  <!-- start widget -->
                  <div class="widget widget--search">
                    <form class="form--horizontal">
                      <div class="input-wrp">
                        <input
                          class="textfield"
                          name="s"
                          type="text"
                          id="search"
                          placeholder="Search"
