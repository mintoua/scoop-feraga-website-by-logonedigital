              ></script>
              <script>
                $(document).ready(function () {
                  var currentRequest = null;
                  $("#search").keyup(function (e) {
                    var value = $(this).val();
                    if (value == "") {
                      currentRequest.abort();
                    } else if (currentRequest != null) {
                      currentRequest.abort();
                    }

                    currentRequest = $.ajax({
                      url: "{{ path('app_shop_search') }}",
                      type: "POST",
                      data: {
                        searchValue: value,
                      },
                      success: function (retour) {
                        $("#all").html(retour);
                      },
                    });
                    return false;
                  });
                });
              </script>
