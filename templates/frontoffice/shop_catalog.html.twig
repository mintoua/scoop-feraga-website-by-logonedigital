                    </form>
                  </div>
                  <!-- end widget -->

                  <!-- start widget -->
                  <div class="widget widget--additional">
                    <h4 class="h6 widget-title">Cat√©gories</h4>
                    <form id="filters">
                      <ul>
                        {% set queryParams = app.request.query.all %} {% set
                        queryString = queryParams|filter((v,k) => k !=
                        "page")|url_encode %} {% for categorie in categories %}
                        <li>
                          <label class="checkfield">
                            {% if queryParams is not empty and
                            queryParams.categories is defined %} {% set checked
                            = (categorie.slug in queryParams.categories) ?
                            "checked" : "" %} {% else %} {% set checked = "" %}
                            {% endif %}
                            <input
                              type="checkbox"
                              name="categories[]"
                              id="cat{{ categorie.slug }}"
                              value="{{ categorie.slug }}"
                              {{
                              checked
                              }}
                            />
                            <i></i>
