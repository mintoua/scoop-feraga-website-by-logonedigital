<body class="woocommerce-page cart-page">
<div
        id="app">
    <!-- start header -->
    {% include('includes/frontoffice/header_shop.html.twig')%}
    <!-- end header -->

    <!-- start main -->
    <main
            role="main">
        <!-- Common styles
                        ================================================== -->
        <link
                rel="stylesheet" href="{{ asset('frontoffice/') }}css/style.min.css" type="text/css">

        <!-- Load lazyLoad scripts
                        ================================================== -->
        <script>
            (function (w, d) {
                var m = d.getElementsByTagName('main')[0],
                    s = d.createElement("script"),
                    v = !("IntersectionObserver" in w) ? "8.17.0" : "10.19.0",
                    o = {
                        elements_selector: ".lazy",
                        data_src: 'src',
                        data_srcset: 'srcset',
                        threshold: 500,
                        callback_enter: function (element) {
                        },
                        callback_load: function (element) {
                            element.removeAttribute('data-src')

                            oTimeout = setTimeout(function () {
                                clearTimeout(oTimeout);

                                AOS.refresh();
                            }, 1000);
                        },
                        callback_set: function (element) {
                        },
                        callback_error: function (element) {
                            element.src = "https://placeholdit.imgix.net/~text?txtsize=21&txt=Image%20not%20load&w=200&h=200";
                        }
                    };
                s.type = 'text/javascript';
                s.async = true; // This includes the script as async. See the "recipes" section for more information about async loading of LazyLoad.
                s.src = "https://cdn.jsdelivr.net/npm/vanilla-lazyload@" + v + "/dist/lazyload.min.js";
                m.appendChild(s);
// m.insertBefore(s, m.firstChild);
                w.lazyLoadOptions = o;
            }(window, document));
        </script>

        <!-- start section -->
        <section class="section" style="margin-top: 50px; text-align:center;">
            <div class="section-heading">
                <h2 class="__title">Votre <span>panier</span></h2>
            </div>
            <div class="decor-el decor-el--1" data-jarallax-element="-70" data-speed="0.2">
                <img class="lazy" width="286" height="280" src="{{ asset('frontoffice/') }}img/blank.gif"
                     data-src="{{ asset('frontoffice/') }}img/decor-el_1.jpg" alt="demo"/>
            </div>

            <div class="decor-el decor-el--2" data-jarallax-element="-70" data-speed="0.2">
                <img class="lazy" width="99" height="88" src="{{ asset('frontoffice/') }}img/blank.gif"
                     data-src="{{ asset('frontoffice/') }}img/decor-el_2.jpg" alt="demo"/>
            </div>

            <div class="decor-el decor-el--3" data-jarallax-element="-70" data-speed="0.2">
                <img class="lazy" width="115" height="117" src="{{ asset('frontoffice/') }}img/blank.gif"
                     data-src="{{ asset('frontoffice/') }}img/decor-el_3.jpg" alt="demo"/>
            </div>

            <div class="decor-el decor-el--4" data-jarallax-element="-70" data-speed="0.2">
                <img class="lazy" width="84" height="76" src="{{ asset('frontoffice/') }}img/blank.gif"
                     data-src="{{ asset('frontoffice/') }}img/decor-el_4.jpg" alt="demo"/>
            </div>

            <div class="decor-el decor-el--5" data-jarallax-element="-70" data-speed="0.2">
                <img class="lazy" width="248" height="309" src="{{ asset('frontoffice/') }}img/blank.gif"
                     data-src="{{ asset('frontoffice/') }}img/decor-el_5.jpg" alt="demo"/>
            </div>

            <div class="container">
                <div class="row">
                    <div
                            class="col-12">

                        <!-- start cart -->
                        <div class="cart">
                            <form class="cart__form" action="#">
                                <div class="cart__table">
                                    {% if cart|length > 0 %}
                                    <table>
                                        <thead>
                                        <tr>
                                            <td width="10%">&nbsp;</td>
                                            <td width="35%">Produit(s) Ajouté(s)</td>
                                            <td width="15%">Prix</td>
                                            <td width="10%">Quantité</td>
                                            <td width="15%">Total</td>
                                            <td width="5%">&nbsp;</td>
                                        </tr>
                                        </thead>

                                        <tbody>

                                        {% set total = null %}
                                        {% for product in cart %}

                                            <tr>
                                                <td>
                                                    <figure class="__image">
                                                        <a href="{{ path('app_single_product',{'slug':product.product.slug}) }}">
                                                            <img
                                                                 src="{{ asset('uploads/images/'~product.product.product_image) }}"
                                                                 data-src="{{ asset('uploads/images/'~product.product.product_image) }}"
                                                                 alt="demo"/>
                                                        </a>
                                                    </figure>
                                                </td>

                                                <td>
                                                    <a href="{{ path('app_single_product',{'slug':product.product.slug}) }}"
                                                       class="__name">{{ product.product.product_name }}</a>
                                                </td>

                                                <td>
                                                    <span class="__price"> {{ (product.product.product_price ) | number_format }} FCFA</span>
                                                </td>

                                                <td>
                                                    <div class="quantity-counter js-quantity-counter">
                                                        <a href="{{ path('app_decrease_quantity_cart',{'slug': product.product.slug}) }}"
                                                           ><span class="__btn __btn--minus"></span></a>
                                                        <input class="__q-input" type="text"
                                                               value="{{ product.quantity }}"/>
                                                        <a href="{{ path('app_encrease_quantity_cart',{'slug': product.product.slug}) }}"
                                                           ><span class="__btn __btn--plus"></span></a>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="__total">{{ ((product.product.product_price * product.quantity) ) | number_format }} FCFA</span>
                                                </td>

                                                <td>
                                                    <a class="__remove"
                                                       href="{{ path('app_remove_to_cart', {'slug': product.product.slug}) }}"
                                                       aria-label="Remove this item">
                                                        <i class="fontello-cancel"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            {% set total = total + (product.product.product_price * product.quantity) %}
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>

                                <div class="py-5"></div>

                                <div class="row justify-content-md-between">
                                    <div class="col-12 col-md-6">

                                        <div class="cart__coupon form--horizontal">
                                            <div class="input-wrp">
                                                <input class="textfield" type="text" placeholder="Code"/>
                                            </div>

                                            <button class="custom-btn custom-btn--medium custom-btn--style-1"
                                                    type="submit" role="button">Coupon de Réduction
                                            </button>
                                        </div>

                                    </div>

                                    <div class="col-12 col-md-6 col-lg-5 col-xl-4">
                                        <div class="spacer py-5 d-md-none"></div>

                                        <div class="cart__total">
                                            <table>
                                                <thead>
                                                <tr>
                                                    <td colspan="2">
                                                        <h3>PANIER
                                                            <span>TOTAL</span>
                                                        </h3>
                                                    </td>
                                                </tr>
                                                </thead>

                                                <tfoot>
                                                <tr>
                                                    <td colspan="2">
                                                        <a class="custom-btn custom-btn--medium custom-btn--style-1"
                                                           href="{{ path('app_checkout') }}">Continuer</a>
                                                    </td>
                                                </tr>
                                                </tfoot>

                                                <tbody>
                                                <tr>
                                                    <td>Total:</td>
                                                    <td>{{ (total ) | number_format }} FCFA</td>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- start cart -->
                        {% else %}
                            <h3>Désole, votre panier est vide <br><br>
                                <span>nous vous invitons à faire un tour dans notre catalogue de produits &#128521; </span>
                            </h3>
                        {% endif %}
                    </div>
                </div>
            </div>
        </section>
        <!-- end section -->

        <!-- start section -->
        <section class="section section--no-pt section--no-pb section--gutter">
            <div
                    class="container-fluid px-md-0">
                <!-- start banner simple -->
                <div class="simple-banner simple-banner--style-2" data-aos="fade" data-aos-offset="50">
                    <div class="d-none d-lg-block">
                        <img class="img-logo img-fluid  lazy" src="{{ asset('frontoffice/') }}img/blank.gif"
                             data-src="{{ asset('frontoffice/') }}img/logo_scoops_feraga.png" alt="demo"/>
                    </div>

                    <div class="row no-gutters">
                        <div class="col-12 col-lg-6">
                            <a href="#"><img class="img-fluid w-100  lazy"
                                             src="{{ asset('frontoffice/') }}img/blank.gif"
                                             data-src="{{ asset('frontoffice/') }}img/banner_bg_3.jpg" alt="demo"/></a>
                        </div>

                        <div class="col-12 col-lg-6">
                            <a href="#"><img class="img-fluid w-100  lazy"
                                             src="{{ asset('frontoffice/') }}img/blank.gif"
                                             data-src="{{ asset('frontoffice/') }}img/banner_bg_4.jpg" alt="demo"/></a>
                        </div>
                    </div>
                </div>
                <!-- end banner simple -->
            </div>
        </section>
        <!-- end section -->
    </main>
    <!-- end main -->

    <!-- start footer -->
    {%include('includes/frontoffice/footer_shop.html.twig')%}
    <!-- end footer -->
</div>
