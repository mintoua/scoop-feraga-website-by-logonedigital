{% extends 'base_frontoffice.html.twig'%} {% block header %} {%
    include('includes/frontoffice/header.html.twig')%} {% endblock header %}
{% block content %}
<!-- start hero -->

<!-- end hero -->

<!-- start main -->
<main role="main">
    <!-- Common styles
                  ================================================== -->
    <link
            rel="stylesheet"
            href="{{ asset('frontoffice/') }}css/style.min.css"
            type="text/css"
    />

    <!-- Load lazyLoad scripts
                  ================================================== -->

    <!-- start section -->
    <section class="section section--dark-bg section--contacts">
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-12 col-md-6">
                    <div class="row justify-content-end">
                        <div class="col-md-11">
                            <div class="section-heading section-heading--white">
                                <h2 class="__title">Get <span>in touch</span></h2>

                                <p>
                                    Latin words, combined with a handful of model sentence
                                    structures, to generate Lorem Ipsum which looks reasonable.
                                </p>
                            </div>
                            <div class="contact-form">
                                {{ form_start(form) }}
                                <div class="input-wrp">
                                    {{
                                    form_row(form.name, {
                                        label: false,
                                        attr: {
                                            class: "textfield",
                                        }
                                    })
                                    }}
                                </div>
                                <div class="input-wrp">
                                    {{
                                    form_row(form.firstname, {
                                        label: false,
                                        attr: {
                                            class: "textfield",
                                        }
                                    })
                                    }}
                                </div>
                                <div class="input-wrp">
                                    {{
                                    form_row(form.lastname, {
                                        label: false,
                                        attr: {
                                            class: "textfield",
                                            placeholder: "Email"
                                        }
                                    })
                                    }}
                                </div>

                                <button
                                        class="custom-btn custom-btn--medium custom-btn--style-3 wide"
                                        type="submit"
                                        value="submit"
                                        role="button"
                                >
                                    Envoyer
                                </button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        </div>
    </section>
    <!-- end section -->
</main>
<!-- end main -->
{% endblock content %}
{% block footer %} {%
    include('includes/frontoffice/footer.html.twig')%} {% endblock footer %}